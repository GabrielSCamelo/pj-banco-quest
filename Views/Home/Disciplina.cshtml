@{
    ViewData["Title"] = "Disciplina";

}
<div class="container-fluid" ng-controller="DisciplinaController">
    <div class="row justify-content-center">
        <!-- Card Adicionar Nova Disciplina -->
        <div class="col-lg-4 col-sm-12 mt-3">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Adicionar Nova Disciplina</h2>
                    <form ng-submit="criarDisciplina()">
                        <div class="form-group">
                            <label for="nome">Nome:</label>
                            <input type="text" id="nome" class="form-control" ng-model="novaDisciplina.nome" required>
                        </div>
                        <div class="form-group">
                            <label for="descricao">Descrição:</label>
                            <input type="text" id="descricao" class="form-control" ng-model="novaDisciplina.descricao" required>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Criar Disciplina</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Card Listar Todas as Disciplinas -->
        <div class="col-lg-4 col-sm-12 mt-3">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">
                        <i class="bi bi-book h5"></i> Listar Todas as Disciplinas
                    </h2>
                    <div class="table-responsive">
                        <table class="table table-striped" ng-if="disciplinas.length > 0">
                            <thead>
                                <tr>
                                    <th>Nome:</th>
                                    <th>Descrição:</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="disciplina in disciplinas" ng-click="getDetails(disciplina.id)" ng-class="{ 'table-active': disciplinaSelecionada === disciplina }">
                                    <td>{{ disciplina.nome }}</td>
                                    <td>{{ disciplina.descricao }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <p ng-if="disciplinas.length === 0">Nenhuma disciplina cadastrada.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card Detalhes da Disciplina -->
        <div class="col-lg-4 col-sm-12 mt-3">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Detalhes da Disciplina</h2>
                    <div ng-if="disciplina.id">
                        <label>Nome:</label> {{ disciplina.nome }}<br>
                        <label>Descrição:</label> {{ disciplina.descricao }}<br>
                    </div>
                    <div ng-if="!disciplina.id">
                        <p>Selecione uma disciplina para ver os detalhes.</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>