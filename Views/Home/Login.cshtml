@{
    Layout = null;
    ViewData["Title"] = "Login";

}
<!DOCTYPE html>
<html lang="pt-br" ng-app="PJ_DB_QUEST">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/favicon.ico" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <header>
        <div class="container" ng-controller="LoginController">
            <div class="container-fluid">
                <div class="d-flex justify-content-center align-items-center vh-100">
                    <div class="col-md-4">
                        <!-- Definindo a largura do card para ocupar metade da tela em dispositivos médios e acima -->
                        <div class="card mt-4 mb-3 mx-auto">
                            <h1 class="card-header text-center">Login</h1>
                            <div class="card-body">
                                <div class="form-group">
                                    <form ng-submit="enviarLogin()">
                                        <div class="form-group">
                                            <i class="bi bi-person-circle"></i>
                                            <label class="form-label my-4" for="Username">Usuário:</label>
                                            <input type="text" class="form-control form-control-lg rounded-pill shadow bg-light" placeholder="Insira o usuário:" ng-model="perfil.Username">
                                        </div>
                                        <div class="form-group">
                                            <i class="bi bi-lock-fill"></i>
                                            <label class="form-label my-4" for="Password">Senha:</label>
                                            <div class="input-group">
                                                <input type="{{ showPassword ? 'text' : 'password' }}" class="form-control form-control-lg rounded-pill shadow bg-light" placeholder="Insira a Senha:" ng-model="perfil.Password">
                                                <button class="visibility rounded-pill" type="button" ng-click="togglePasswordVisibility()">
                                                    <i ng-class="showPassword ? 'bi bi-eye-fill' : 'bi bi-eye-slash-fill'"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="form-check my-4">
                                            <input class="form-check-input" type="checkbox" ng-model="perfil.Lembre_me" id="Lembre_me">
                                            <label class="form-check-label" for="Lembre_me">
                                                Lembrar Senha
                                            </label>
                                        </div>
                                        <div class="col-auto align-content-center text-center my-3">
                                            <input type="submit" class="col-lg-10 btn btn-secondary" value="Login">
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="card-footer text-center"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
</body>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - pj_banco_quest - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="~/js/Main.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<style>
    /* Estilos para o botão de alternância de senha */
    .toggle-password {
        position: absolute;
        top: 50%;
        right: 5px;
        transform: translateY(-50%);
        cursor: pointer;
    }

    .visibility {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        border: none;
        /*prioridade maxima sobre o input: */
        z-index: 10;
    }
</style>