@{
    ViewData["Title"] = "AlunoTurma";

}
<div class="container-fluid" ng-controller="AlunoTurmaController">
    <div class="row justify-content-center">
        <!-- Card Seleção de Turma -->
        <div class="col-lg-4 col-sm-12 mt-3">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Selecionar Turma</h2>
                    <form>
                        <div class="form-group">
                            <label for="turma">Selecione a Turma:</label>
                            <select id="turma" class="form-control" ng-model="alunoTurma.turmaId" ng-change="carregarAlunos()">
                                <option value="" disabled>Selecione uma turma</option>
                                <option ng-repeat="turma in turmas" value="{{ turma.id }}">{{ turma.disciplina.nome }} - {{ turma.periodo }}</option>
                            </select>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Card Lista de Alunos -->
        <div class="col-lg-4 col-sm-12 mt-3">
            <div class="card">
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    <h2 class="card-title">Lista de Alunos</h2>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Nome</th>
                                    <th>Matrícula</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="aluno in alunos">
                                    <td>
                                        <input type="checkbox" ng-model="aluno.selecionado" ng-disabled="aluno.adicionado">
                                    </td>
                                    <td>{{ aluno.nome }}</td>
                                    <td>{{ aluno.matricula }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success float-end mt-3" ng-click="associarAlunosTurma()">Adicionar Selecionados</button>
                </div>
            </div>
        </div>

    </div>
</div>