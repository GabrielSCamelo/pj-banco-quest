@{
    ViewData["Title"] = "Simulado";

}
<!-- Card Adicionar Novo Simulado -->
<div class="card col-lg-4" ng-controller="SimuladoController">
    <div class="card-body">
        <h2 class="card-title">Adicionar Novo Simulado</h2>
        <form ng-submit="criarSimulado()">
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" id="nome" class="form-control" ng-model="novoSimulado.nome" required>
            </div>
            <div class="form-group">
                <label for="quantidadeQuestoes">Quantidade de Questões:</label>
                <input type="number" id="quantidadeQuestoes" class="form-control" ng-model="novoSimulado.quantidadeQuestoes" min="5" max="25" required>
            </div>
            <div class="form-group">
                <label for="disciplinas">Disciplinas:</label>
                <select id="disciplinas" class="form-control" ng-model="novoSimulado.disciplinas" ng-options="disciplina.id as disciplina.nome for disciplina in disciplinas" multiple required></select>
            </div>
            <div class="form-group">
                <label for="turmas">Turmas:</label>
                <select id="turmas" class="form-control" ng-model="novoSimulado.turmas" ng-options="turma.id as turma.nome for turma in turmas" multiple required></select>
            </div>
            <button type="submit" class="btn btn-primary">Criar Simulado</button>
        </form>
    </div>
</div>